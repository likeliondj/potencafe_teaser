
jQuery(document).ready(function() {

    /*
        Background slideshow
    */
    $('.coming-soon').backstretch([
      "<%= asset_path('backgrounds/1.jpg')%>"
    , "<%= asset_path('backgrounds/2.jpg')%>"
    , "<%= asset_path('backgrounds/3.jpg')%>"
    ], {duration: 3000, fade: 750});

    /*
        Countdown initializer
    */
    var now = new Date();
    var countTo = 25 * 24 * 60 * 60 * 1000 + now.valueOf();
    BigDay= new Date("August 1, 2013");
    var countTo = BigDay.getTime()
    $('.timer').countdown(countTo, function(event) {
        var $this = $(this);
        switch(event.type) {
            case "seconds":
            case "minutes":
            case "hours":
            case "days":
            case "weeks":
            case "daysLeft":
                $this.find('span.'+event.type).html(event.value);
                break;
            case "finished":
                $this.hide();
                break;
        }
    });

  /* Submit Email */

  $("#enter_mail").click(function(){
      $.ajax({
        data:{
        address: $("#email").val()
        },
      url: '/teaser/save_mail',
      type:'POST',
      success: function(){
        alert("감사합니다. \n from.포텐카페지기");
       }
      });
   });


});

